import random

roll_again = "yes"

while roll_again == "yes" or roll_again == "y":
  numofdice = int(input("Number of dice you want to roll: "))
  print("Dices rolling...")
  print("The values are :")
  
  while numofdice > 0:
    print(random.randint(1,6))
    numofdice = numofdice - 1
    
  roll_again = input("Roll the Dices Again? ")
